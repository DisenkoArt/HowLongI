<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTopViews"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:id="@+id/rectangle_image_about_view"
        android:src="@drawable/designer_rectangle" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.73"
        android:layout_marginTop="-10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/profession_title_about_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/professionTitleDesigner"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/name_title_about_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profession_title_about_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:text="@string/name_title_designer"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="27sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_about_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:src="@mipmap/ic_designer" />

</LinearLayout>